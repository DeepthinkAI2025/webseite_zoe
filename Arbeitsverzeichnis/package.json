{
  "name": "zoe-solar-web",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "seo:meta-length": "node scripts/meta-length-check.js",
    "seo:meta-length:suggest": "node scripts/meta-length-check.js --suggest",
    "seo:meta-length:fix": "node scripts/meta-length-check.js --fix",
    "seo:ai:suggest": "node scripts/meta-ai-suggest.js --template",
    "gate:seo:meta": "node scripts/meta-length-check.js --suggest | grep -q 'short\\|long' && (echo 'Meta length violations found' && exit 1) || echo 'Meta lengths OK'",
    "dev": "VITE_USE_PREACT=1 vite --host 0.0.0.0 --port 5173",
    "build": "VITE_USE_PREACT=1 vite build",
    "perf:report": "node scripts/lighthouse-perf-report.js",
    "check:ui-variants": "node scripts/check-legacy-variants.js",
    "check:contrast": "node scripts/contrast-check.js",
    "contrast:finalize": "node scripts/contrast-finalize.js",
    "contrast:guard": "node scripts/contrast-guard.js",
    "check:contrast:extended": "node scripts/contrast-check-extended.js",
    "audit:focus": "node scripts/focus-audit.js",
    "audit:focus:strict": "STRICT_FOCUS=1 node scripts/focus-audit.js",
    "audit:focus:ast": "node scripts/focus-audit-ast.js",
    "audit:a11y:axe": "node scripts/axe-a11y-audit.js",
    "audit:a11y:axe:self": "AXE_EMBED_SERVER=1 node scripts/axe-a11y-audit.js",
    "audit:a11y:finalize": "node scripts/axe-finalize.js",
    "audit:a11y:axe:preview": "vite preview --port 4173 & PID=$!; sleep 3; AXE_BASE=http://localhost:4173 node scripts/axe-a11y-audit.js; kill $PID || true",
    "audit:a11y:axe:guard": "node scripts/axe-guard.js 0",
    "audit:a11y:axe:diff": "node scripts/axe-diff.js docs/axe-a11y-report-prev.json docs/axe-a11y-report.json || true",
    "audit:a11y:axe:runs": "vite preview --port 4173 & PID=$!; sleep 3; AXE_BASE=http://localhost:4173 AXE_OUT=docs/axe-a11y-report-run1.json node scripts/axe-a11y-audit.js && AXE_BASE=http://localhost:4173 AXE_OUT=docs/axe-a11y-report-run2.json node scripts/axe-a11y-audit.js && AXE_BASE=http://localhost:4173 AXE_OUT=docs/axe-a11y-report-run3.json node scripts/axe-a11y-audit.js; kill $PID || true",
    "audit:responsive": "node scripts/responsive-drift-audit.js",
    "audit:containers": "node scripts/container-usage-audit.js",
    "audit:headings": "node scripts/heading-aria-audit.js",
    "audit:css": "node ../scripts/css-payload-audit.js --build",
    "audit:shadows": "node ../scripts/shadow-usage-audit.js",
    "audit:colors-borders": "node ../scripts/color-border-usage-audit.js",
    "audit:css-redundancy": "node ../scripts/css-redundancy-report.js",
    "audit:critical-render": "npm run build --silent && node ../scripts/critical-render-report.js",
    "audit:lighthouse": "npm run build && npx serve dist -l 4173 & sleep 3 && node ../scripts/lighthouse-a11y-report.js && pkill -f 'serve dist'",
    "audit:a11y:lh": "npm run build --silent && LH_EMBED_SERVER=1 node ../scripts/lighthouse-a11y-report.js",
    "audit:a11y:lh:quick": "node ../scripts/lh-a11y-quick-summary.js",
    "gate:a11y:lh": "node scripts/lighthouse-a11y-gate.js",
    "gate:a11y:axe:stability": "node scripts/axe-stability-gate.js docs/axe-a11y-report-run1.json docs/axe-a11y-report-run2.json docs/axe-a11y-report-run3.json",
    "audit:lighthouse:perf": "npm run build && npx serve dist -l 4173 & sleep 3 && node ../scripts/lighthouse-perf-report.js && pkill -f 'serve dist'",
    "audit:web-vitals": "npm run build && npx serve dist -l 4173 & sleep 2 && node ../scripts/web-vitals-collect.js && pkill -f 'serve dist'",
    "gate:lighthouse": "bash ../scripts/lighthouse-gate.sh",
    "gate:icons": "node scripts/icon-export-gate.js",
    "audit:spacing": "node scripts/spacing-audit.js",
    "seo:sitemap": "node scripts/generate-sitemap.js",
    "seo:wordcount": "node scripts/extract-word-count.js",
    "seo:canonical:normalize": "node scripts/canonical-normalize.js",
    "gate:canonical": "npm run seo:canonical:normalize --silent && node scripts/canonical-gate.js --allow-slash",
    "seo:images:alt-fix": "node scripts/alt-text-fix.js",
    "seo:images:alt-lint": "node scripts/alt-text-lint.js",
    "gate:images:alt": "node scripts/alt-text-lint.js --fail",
    "a11y:names:lint": "node scripts/accessible-names-lint.js",
    "gate:a11y:names": "node scripts/accessible-names-lint.js --fail",
    "a11y:tabindex": "node scripts/tabindex-audit.js",
    "gate:a11y:tabindex": "node scripts/tabindex-audit.js --fail",
    "audit:quarterly-template": "node scripts/create-quarterly-ui-audit-template.js",
    "audit:scroll-indicator": "node scripts/scroll-indicator-aria-audit.js",
    "test:focus-order": "playwright test tests/focus-order.spec.js",
    "preview": "vite preview",
    "optimize:images": "node scripts/optimize-images.js",
    "test:visual": "playwright test tests/visual-regression.spec.js",
    "test:smoke": "npm run build --silent && vite preview --port 4173 & PID=$!; for i in $(seq 1 30); do curl -sSf http://localhost:4173/ >/dev/null && READY=1 && break || sleep 0.5; done; if [ -z \"$READY\" ]; then echo 'Preview not ready' && kill $PID || true && exit 1; fi; PLAYWRIGHT_BASE=http://localhost:4173 playwright test tests/smoke.spec.js; CODE=$?; kill $PID || true; exit $CODE",
    "test:all": "playwright test",
    "test:ui": "playwright test --ui",
    "lint:design": "eslint --config .eslintrc.design-system.json src/",
    "lint:design:fix": "eslint --config .eslintrc.design-system.json src/ --fix",
    "audit:colors": "grep -r '#[0-9a-fA-F]\\{3,6\\}' src/ --include='*.jsx' --include='*.tsx' --exclude-dir=node_modules | grep -v '#fff\\|#000\\|#ffffff\\|#000000\\|var(--color' || echo 'No disallowed colors found'",
    "audit:inline-styles": "grep -r 'style=' src/ --include='*.jsx' --include='*.tsx' | grep -v '// dynamic style\\|// calculated style\\|// exception' || echo 'No problematic inline styles found'",
    "quality:check": "npm run lint:design && npm run audit:colors && npm run audit:inline-styles",
    "audit:lighthouse:perf:node": "npm run build --silent && node ../scripts/lighthouse-perf-node.js",
    "audit:inp:lab": "npm run build --silent && node scripts/inp-lab-collect.js",
    "gate:inp": "node scripts/inp-gate.js",
    "build:critical": "npm run build --silent && node ../scripts/extract-critical-css.js"
  },
  "dependencies": {
    "i18next": "^25.4.2",
    "i18next-browser-languagedetector": "^8.2.0",
    "lucide-react": "^0.441.0",
    "preact": "^10.22.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-focus-lock": "^2.13.6",
    "react-helmet-async": "^2.0.5",
    "react-i18next": "^15.7.2",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^6.26.2",
    "remark-gfm": "^4.0.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "autoprefixer": "^10.4.20",
    "chrome-launcher": "^1.0.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "fast-xml-parser": "^5.2.5",
    "globby": "^14.1.0",
    "jsdom": "^26.1.0",
    "lighthouse": "^12.8.2",
    "postcss": "^8.4.47",
    "puppeteer": "^23.4.1",
    "sharp": "^0.33.4",
    "tailwindcss": "^3.4.12",
    "tailwindcss-animate": "^1.0.7",
    "vite": "^5.4.2"
  }
}
